{
  "compilerOptions": {
  "target": "ES6",
  "lib": ["dom", "dom.iterable", "esnext"],
  "allowJs": true,
  "skipLibCheck": true,
  "strict": false,
  "forceConsistentCasingInFileNames": true,
  "module": "esnext",
  "moduleResolution": "bundler",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "noEmit": true,
  "jsx": "preserve",
  "incremental": true,
  "esModuleInterop": true,
  "types": ["node"],
  "baseUrl": ".", // ✅ base of your project
  "paths": {
    "@/*": ["./*"] // ✅ maps @/ to root
  },
  "plugins": [
    {
      "name": "next"
    }
  ]
}
,
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
